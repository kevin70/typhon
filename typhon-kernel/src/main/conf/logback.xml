<configuration scan="true" scanPeriod="60 seconds">
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" 
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${typhon.home}/logs/typhon.log</file>
        <rollingPolicy 
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${typhon.home}/logs/typhon-%d{yyyy-MM-dd}-%i.log
            </FileNamePattern>
            <MaxHistory>10</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>10MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>        
        </rollingPolicy>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} %L - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.commons" level="error"/>
    <logger name="org.reflections" level="error"/>
    
    <logger name="typhon_ConsoleOut" level="trace" addtivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    
    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>
</configuration>