<configuration scan="true">
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread]  %M - %msg%n%ex{full}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${typhon.home}/logs/typhon.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>typhon-%i.log</fileNamePattern>
            <maxHistory>9</maxHistory>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} %L - %msg%n%ex{full}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <appender name="protected" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.home}/.logs/typhon-protected.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${typhon.home}/.logs/typhon-protected-%i.log</fileNamePattern>
            <maxHistory>9</maxHistory>
            <compressionMode>GZ</compressionMode>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} %L - %msg%n%ex{full}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="org.apache.commons" level="error"/>
    <logger name="org.reflections" level="error"/>
    
    <logger name="console.out" level="trace" addtivity="false">
        <appender-ref ref="stdout"/>
    </logger>
    
    <root level="debug">
        <appender-ref ref="file"/>
    </root>
</configuration>